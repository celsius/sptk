############################################################
#### Intermediate Files ####################################
############################################################

AUX = $(SRC:.tex=.aux)
IDX = $(SRC:.tex=.idx)
IND = $(SRC:.tex=.ind)


############################################################
#### Target File ###########################################
############################################################

DVI    = $(SRC:.tex=.dvi)
PS     = $(SRC:.tex=.ps)
PDF    = $(SRC:.tex=.pdf)
TARGET = $(PDF)


############################################################
#### Command Definitions ###################################
############################################################

LATEX   = @LATEX@
MAKEIDX = @MAKEINDEX@
DVIPS   = @DVIPS@ -f
PSPDF   = @PS2PDF@
DVIPDF  = @DVIPDF@

RM    = rm -rf
TOUCH = touch


############################################################
#### Suffix Rules ##########################################
############################################################

.SUFFIXES: .tex .aux .idx .ind .dvi .ps .pdf

.tex.aux:
	$(LATEX) $<
	$(RM) $*.idx $*.dvi

.tex.idx:
	$(LATEX) $<
	$(RM) $*.dvi

.idx.ind:
	$(MAKEIDX) $<

.tex.dvi:
	$(LATEX) $<
	$(LATEX) $<
	$(TOUCH) $@ $*.ind

.dvi.ps:
	$(DVIPS) $< > $@

.ps.pdf:
	$(PSPDF) $< $@

.dvi.pdf:
	$(DVIPDF) -o $@ $<
############################################################
#### Make Target File ######################################
############################################################

all: $(TARGET)

$(PS): $(DVI) $(EPSF)

$(DVI): $(AUX) $(IND) $(EPSF)

$(IND): $(AUX)

$(AUX): $(INC)

$(PDF): $(DVI) $(EPSF)

############################################################
#### Directory Cleaning ####################################
############################################################

clean:
	$(RM) *.dvi *.ps *.pdf *.aux *.toc *.lof *.lot *.log *.idx* *.ind* *.ilg *.out
	$(RM) *~ \#* $(TARGET)

logclean:
	$(RM) *.log *.ilg

distclean: clean 
	$(RM) Makefile config.log config.status


